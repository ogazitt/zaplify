<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="Azure" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WorkerRole name="WorkerRole" vmsize="ExtraSmall">
    <Imports>
      <Import moduleName="Diagnostics" />
      <Import moduleName="RemoteAccess" />
      <Import moduleName="RemoteForwarder" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="AzureStorageAccount" />
      <Setting name="UsersConnection" />
      <Setting name="SuggestionsConnection" />
      <Setting name="SQLUsers" />
      <Setting name="SQLSuggestions" />
      <Setting name="MailWorkerCount" />
      <Setting name="MailWorkerTimeout" />
      <Setting name="SpeechWorkerCount" />
      <Setting name="SpeechWorkerTimeout" />
      <Setting name="WorkflowWorkerCount" />
      <Setting name="WorkflowWorkerTimeout" />
      <Setting name="GoogleClientID" />
      <Setting name="GoogleClientSecret" />
      <Setting name="DeploymentName" />
      <Setting name="AzureLoggingEnabled" />
      <Setting name="SplunkLoggingEnabled" />
      <Setting name="SplunkServerEndpoint" />
      <Setting name="SplunkLocalPort" />
    </ConfigurationSettings>
    <Startup>
      <Task executionContext="elevated" commandLine="startup\Install.cmd">
        <Environment>
          <Variable name="EMULATED">
            <RoleInstanceValue xpath="/RoleEnvironment/Deployment/@emulated" />
          </Variable>
          <Variable name="SPLUNKENDPOINT">
            <RoleInstanceValue xpath="/RoleEnvironment/CurrentInstance/ConfigurationSettings/ConfigurationSetting[@name='SplunkServerEndpoint']/@value" />
          </Variable>
          <Variable name="SPLUNKLOCALPORT">
            <RoleInstanceValue xpath="/RoleEnvironment/CurrentInstance/ConfigurationSettings/ConfigurationSetting[@name='SplunkLocalPort']/@value" />
          </Variable>
          <Variable name="SPEECHWORKERCOUNT">
            <RoleInstanceValue xpath="/RoleEnvironment/CurrentInstance/ConfigurationSettings/ConfigurationSetting[@name='SpeechWorkerCount']/@value" />
          </Variable>
          <Variable name="SPEECHPORT">
            <RoleInstanceValue xpath="/RoleEnvironment/CurrentInstance/Endpoints/Endpoint[@name='SpeechEndpoint']/@port" />
          </Variable>
        </Environment>
      </Task>
    </Startup>
    <LocalResources>
      <LocalStorage name="TraceFolder" sizeInMB="20" cleanOnRoleRecycle="true" />
    </LocalResources>
    <Endpoints>
      <InputEndpoint name="SpeechEndpoint" protocol="http" port="8080" localPort="8080" />
    </Endpoints>
    <Runtime executionContext="elevated">
    </Runtime>
  </WorkerRole>
  <WebRole name="Website" vmsize="ExtraSmall">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="EndpointHTTP" />
          <Binding name="Endpoint2" endpointName="EndpointSSL" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="EndpointHTTP" protocol="http" port="80" />
      <InputEndpoint name="EndpointSSL" protocol="https" port="443" certificate="ZaplifySSLCert" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
      <Import moduleName="RemoteAccess" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="AzureStorageAccount" />
      <Setting name="UsersConnection" />
      <Setting name="SuggestionsConnection" />
      <Setting name="DataServicesConnection" />
      <Setting name="SQLUsers" />
      <Setting name="SQLSuggestions" />
      <Setting name="SQLDataServices" />
      <Setting name="DataServicesEndpoint" />
      <Setting name="FBAppID" />
      <Setting name="FBAppSecret" />
      <Setting name="GoogleClientID" />
      <Setting name="GoogleClientSecret" />
      <Setting name="DeploymentName" />
      <Setting name="AzureLoggingEnabled" />
      <Setting name="SplunkLoggingEnabled" />
      <Setting name="SplunkServerEndpoint" />
      <Setting name="SplunkLocalPort" />
    </ConfigurationSettings>
    <Startup>
      <Task executionContext="elevated" commandLine="startup\Install.cmd">
        <Environment>
          <Variable name="EMULATED">
            <RoleInstanceValue xpath="/RoleEnvironment/Deployment/@emulated" />
          </Variable>
          <Variable name="SPLUNKENDPOINT">
            <RoleInstanceValue xpath="/RoleEnvironment/CurrentInstance/ConfigurationSettings/ConfigurationSetting[@name='SplunkServerEndpoint']/@value" />
          </Variable>
          <Variable name="SPLUNKLOCALPORT">
            <RoleInstanceValue xpath="/RoleEnvironment/CurrentInstance/ConfigurationSettings/ConfigurationSetting[@name='SplunkLocalPort']/@value" />
          </Variable>
        </Environment>
      </Task>
    </Startup>
    <LocalResources>
      <LocalStorage name="TraceFolder" sizeInMB="20" cleanOnRoleRecycle="true" />
    </LocalResources>
    <Certificates>
      <Certificate name="ZaplifySSLCert" storeLocation="LocalMachine" storeName="My" />
      <Certificate name="ZaplfiySSLIntermediateCert" storeLocation="LocalMachine" storeName="CA" />
      <Certificate name="ZaplifySSLRootCert" storeLocation="LocalMachine" storeName="CA" />
    </Certificates>
  </WebRole>
</ServiceDefinition>